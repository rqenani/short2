// Prisma schema for short.al
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

model Link {
  id        String   @id @default(cuid())
  slug      String   @unique
  longUrl   String
  domain    String?
  clicks    Int      @default(0)
  createdAt DateTime @default(now())
  Click     Click[]
}

model Click {
  id        String   @id @default(cuid())
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  ip        String?
  ua        String?
  referer   String?
}

model Domain {
  id        String   @id @default(cuid())
  host      String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model AdConfig {
  id        String   @id @default(cuid())
  enabled   Boolean  @default(false)
  html      String   @default("<div style='font-family:Inter,sans-serif;padding:24px;text-align:center'><h3>Redirectingâ€¦</h3><p>Powered by short.al</p></div>")
  seconds   Int      @default(0)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
